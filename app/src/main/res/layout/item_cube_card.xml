<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="299dp">

            <!-- IMAGE -->
            <ImageView
                android:id="@+id/imgCube"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/red_cube" />


        </FrameLayout>


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Red Cube"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strong cube for storage and transport"
            android:textColor="#666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 DH"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="6dp"/>



        <!-- SIZE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Size"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:paddingTop="6dp">

            <Button
                android:id="@+id/btnSizeS"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="#031F50"
                android:text="5×5 (S)" />

            <Button
                android:id="@+id/btnSizeM"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#031F50"
                android:text="20×20 (M)" />

            <Button
                android:id="@+id/btnSizeL"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#031F50"
                android:text="60×60 (L)" />
        </LinearLayout>
        </HorizontalScrollView>

        <!-- MATERIAL (Spinner pour l’instant) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Material"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/materials" />

        <!-- QUANTITY -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Quantity"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:backgroundTint="#b63328"
                android:text="-" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:backgroundTint="#b63328"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            app:backgroundTint="#031F50"
            android:text="Add to Cart"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

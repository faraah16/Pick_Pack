<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#031F50"
            android:text="Back"
            app:icon="@drawable/ic_arrow_back" />

        <!-- ================= CLIENT INFO ================= -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Client Information"
            android:textColor="@color/Red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address" />

        <!-- ================= DELIVERY ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Delivery Type"
            android:textColor="@color/Red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbNormal"
                android:text="Normal (10 DH)" />

            <RadioButton
                android:id="@+id/rbExpress"
                android:text="Express (25 DH)" />

            <RadioButton
                android:id="@+id/rbPoint"
                android:text="Point relais (5 DH)" />
        </RadioGroup>

        <!-- ================= PAYMENT ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Payment Method"
            android:textColor="@color/Red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbCard"
                android:text="Pay by Card" />

            <RadioButton
                android:id="@+id/rbCash"
                android:text="Cash on Delivery" />
        </RadioGroup>

        <!-- CARD INFO (VISIBLE SEULEMENT SI CARTE) -->
        <EditText
            android:id="@+id/etCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:inputType="number"
            android:visibility="gone" />

        <!-- ================= SUMMARY ================= -->
        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Total will be calculated at confirmation"
            android:textColor="@color/Red"
            android:textSize="14sp" />

        <!-- ================= CONFIRM ================= -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#031F50"
            android:text="Confirm Order"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvCheckoutTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total Ã  payer : 0 DH"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    android:padding="20dp"
    app:layout_constraintCircleRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- âœ… SUCCESS ICON -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="âœ”"
            android:textColor="#73050D"
            android:textSize="60sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Order Confirmed"
            android:textColor="@color/Red"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- ðŸ’³ PAYMENT SUCCESS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#b2382c"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvPaymentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Order ID: ORD-XXXX"
            android:textColor="@color/Blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- â­ RATING -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Rate our App"
            android:textColor="@color/Blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D6D6D6"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="#FFD700"
            android:rating="0"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:secondaryProgressTint="#FFD700"
            android:stepSize="1" />


        <!-- ðŸ’¬ COMMENT -->
        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/edit_text"
            android:hint="Leave a comment (optional)"
            android:shadowRadius="12"
            android:textColorHighlight="@color/Blue"
            android:textColorHint="@color/Blue" />

        <!-- ðŸ”˜ BUTTON -->
        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#031F50"
            android:text="Finish"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
